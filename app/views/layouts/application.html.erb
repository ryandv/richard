                  <li class="button">
                    <form action="/queue_transactions" class="button_to" method="post">
                      <div>
                        <input class="btn btn-primary btn-block" type="submit" value="Start Waiting" />
                        <input name="authenticity_token" type="hidden" value="gG+aGN/1+OzKel3UyqDefG4pkUmYZfHqelH8BewkVns=" />
                      </div>
                    </form>
                  </li>

          </div><!--/.well -->
        </div><!--/span-->
        <% end %>

        <div class="span9">
          <%= bootstrap_flash %>
        </div>
        <div class="span9">
          <% if current_user %>
            <%= yield %>
          <% end %>
        </div>
      </div><!--/row-->

      <footer>
        <p>&copy; Nulogy Corporation 2014</p>
      </footer>
    </div> <!-- /container -->
  </body>
</html>
